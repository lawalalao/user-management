{% extends 'base.html.twig' %}

{#{% block title %}Hello RegistrationController!{% endblock %}#}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {{ form_start(form) }}
    <div class="row">
        <div class="col-lg-12" style="text-align: center; color: black">
            <h3>User Management System</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            {{ form_row(form.name) }}
        </div>
        <div class="col-6">
            {{ form_row(form.first_name) }}
        </div>
        <div class="col-6">
            {{ form_row(form.email) }}
        </div>
        <div class="col-6">
            {{ form_row(form.plainPassword.first) }}
        </div>
        <div class="col-6">
            {{ form_row(form.plainPassword.second) }}
        </div>
        <div class="col-6">
            {{ form_row(form.phone) }}
        </div>
        <div class="col-4">
                <input type="checkbox" name="isValid" value="1">
        </div>
        <div class="col-5" style="margin-left: -140px;">
            <span>Am agree with terms & Condition</span>
        </div>
        <div class="col-6" style="display: none;">
            <select name="roles">
                <option selected value="SIMPLE"> SIMPLE</option>
{#                <option value="PRO"> PRO </option>#}
            </select>
        </div>
    </div>
    <button type="submit">Register!</button>
    <div class="container">
        <div class="row p-2">
            <h5>if your  already register <a href="{{ login }}">Login</a>
            </h5>
        </div>
    </div>
    {{ form_end(form) }}

</div>
{% endblock %}
